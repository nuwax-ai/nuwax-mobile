<template>
  <view class='container'>
    <!-- 搜索框 -->
    <view class='search-container'>
      <view class='search-box'>
        <uni-icons class="iconfont icon-Search" size="32rpx"></uni-icons>
        <input
          ref="searchInputRef"
          class='search-input'
          placeholder='搜索智能体'
          placeholder-class="placeholder-class"
          type="search"
          confirm-type="search"
          :value="searchKeyword"
          @confirm="handleSearch($event.detail.value)"
          @input="handleSearch($event.detail.value)"
        />
        <template v-if="searchKeyword">
          <uni-icons class="iconfont icon-a-Xcircle-fill clear-icon" size="32rpx" @click="handleSearch('')"></uni-icons>
        </template>
      </view>
      <text class="cancel-text" @click="handleCancel">取消</text>  
    </view>
    <!-- 滚动部分 -->
    <view class='scroll-section'>
      <scroll-view 
        class='agent-scroll'
        @scrolltolower="handleLoadMore"
        :refresher-enabled="true"
        :refresher-triggered="refreshing || false"
        @refresherrefresh="handleRefresh"
        :show-scrollbar="false"
      >
        <template v-if="(agentList || []).length">
          <template v-for="info in agentList" :key="info.id">
            <agent-component
              :icon="info.icon"
              :name="info.name"
              :userName="info.publishUser?.userName"
              :description="info.description"
              :userCount="info.statistics?.userCount"
              :convCount="info.statistics?.convCount"
              :collectCount="info.statistics?.collectCount"
              @click="handleAgentClick(info)"
            />
          </template>
        </template>

        <template v-if="loading">
          <view class='loading-state'>
            <text class='loading-text'>加载中...</text>
          </view>
        </template>

        <template v-else-if="!loading && searchKeyword && agentList?.length === 0">
          <view class='empty-state'>
            <image :src="noData" class='empty-image' />
            <text class='empty-text'>暂无结果</text>
          </view>
        </template>
        
        <template v-if="!loading && !hasMore && agentList?.length">
          <view class='no-more-state'>
            <text class='no-more-text'>没有更多数据了</text>
          </view>
        </template>
      </scroll-view>
    </view>
  </view>
</template>

<script lang="uts" setup>
  import { apiPublishedAgentList } from '@/servers/square'
  import { SquarePublishedListParams } from '@/types/interfaces/square'
  import { SquareAgentTypeEnum } from '@/types/enums/square'
  import { Page } from '@/types/interfaces/request'
  import { RequestResponse } from '@/types/interfaces/request'
  import { SquarePublishedItemInfo } from '@/types/interfaces/square'
  import { SUCCESS_CODE } from '@/constants/codes.constants'
  import { AgentComponentTypeEnum } from '@/types/enums/agent'  
  import noData from '@/static/assets/no_data.png'

  const searchKeyword = ref<string>('')
  const searchTimeoutRef = ref<number | null>(null)
  const agentList = ref<SquarePublishedItemInfo[]>([])
  const hasMore = ref<boolean>(true)
  const page = ref<number>(1)
  const loading = ref<boolean>(false)
  const refreshing = ref<boolean>(false)
  // 搜索输入框ref
  const searchInputRef = ref<UniInputElement | null>(null)

  onMounted(() => {
    // 页面加载完成后自动获取输入框焦点
		nextTick(() => {
			if (searchInputRef.value) {
				searchInputRef.value.focus()
			}
		})
  })

// 获取智能体列表
  const fetchAgentList = async (pageNum: number = 1, keyword: string = searchKeyword.value) => {
    const params: SquarePublishedListParams = {
      targetType: AgentComponentTypeEnum.Agent,
      page: pageNum,
      pageSize: 10,
      category: '' ,
      kw: keyword,
    }
    // 获取智能体列表
    const response  = await apiPublishedAgentList(params)
    const {code, data, message}  = response as unknown as RequestResponse<Page<SquarePublishedItemInfo>>
    // 成功
    if (code === SUCCESS_CODE) {
      const newList = data.records || []
      if (pageNum > 1) {
        agentList.value = [...agentList.value, ...newList]
      } else {
        agentList.value = newList
      }
      hasMore.value = pageNum < data.pages
      page.value = pageNum
      loading.value = false
    } else {
      uni.showToast({
        title: message || '获取智能体列表失败',
        icon: 'error'
      })
    }
  }

   // 处理搜索
   const handleSearch = (keyword: string) => {
    searchKeyword.value = keyword
    // 清除之前的定时器
    if (searchTimeoutRef.value) {
      clearTimeout(searchTimeoutRef.value)
    }
    // 如果搜索关键词为空，则清空列表
    if (!keyword) {
      agentList.value = []
      loading.value = false
      nextTick(() => {
        if (searchInputRef.value) {
          searchInputRef.value.focus()
        }
      })
      return
    }
    
    loading.value = true
    // 设置新的定时器，防抖500ms
    searchTimeoutRef.value = setTimeout(() => {
      page.value = 1
      hasMore.value = true
      fetchAgentList(1, keyword)
    }, 500)
  }

  // 加载更多
  const handleLoadMore = () => {
    if (hasMore.value && !loading.value) {
      fetchAgentList(page.value + 1)
    }
  }

  // 下拉刷新
  const handleRefresh = () => {
    if (refreshing.value) {
      return
    }
    refreshing.value = true
    fetchAgentList().finally(() => {
      refreshing.value = false
    })
  }

  // 取消搜索
  const handleCancel = () => {
    uni.navigateBack({
      delta: 1,
    })
  }

  // 跳转到智能体详情页
  const handleAgentClick = (agent: SquarePublishedItemInfo) => {
    uni.navigateTo({
      url: `/pages/agent-detail/agent-detail?id=${agent.id}&name=${agent.name}`
    })
  }
</script>

