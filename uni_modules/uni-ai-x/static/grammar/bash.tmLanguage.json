{
    "scopeName": "source.shell",
    "name": "Shell Script (Bash)",
    "fileTypes": [
        "sh",
        "bash",
        "zsh"
    ],
    "patterns": [
        {
            "include": "#comment"
        },
        {
            "include": "#string"
        },
        {
            "include": "#variable"
        },
        {
            "include": "#function"
        },
        {
            "include": "#keyword"
        },
        {
            "include": "#operator"
        },
        {
            "include": "#number"
        }
    ],
    "repository": {
        "comment": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.shell",
                    "match": "#.*$"
                }
            ]
        },
        "string": {
            "patterns": [
                {
                    "name": "string.quoted.double.shell",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "include": "#variable"
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.shell",
                    "begin": "'",
                    "end": "'"
                }
            ]
        },
        "variable": {
            "patterns": [
                {
                    "name": "variable.other.shell",
                    "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
                },
                {
                    "name": "variable.other.shell",
                    "match": "\\$\\{[a-zA-Z_][a-zA-Z0-9_]*\\}"
                }
            ]
        },
        "function": {
            "patterns": [
                {
                    "name": "entity.name.function.shell",
                    "match": "^\\s*[a-zA-Z_][a-zA-Z0-9_]*\\s*\\("
                }
            ]
        },
        "keyword": {
            "patterns": [
                {
                    "name": "keyword.control.shell",
                    "match": "\\b(if|then|else|elif|fi|case|esac|for|while|until|do|done|in|select)\\b"
                },
                {
                    "name": "keyword.control.shell",
                    "match": "\\b(function|return|exit|break|continue)\\b"
                }
            ]
        },
        "operator": {
            "patterns": [
                {
                    "name": "keyword.operator.shell",
                    "match": "\\b(and|or|not)\\b"
                },
                {
                    "name": "keyword.operator.shell",
                    "match": "[=!<>]=|[<>]|\\|\\||&&|\\|"
                }
            ]
        },
        "number": {
            "patterns": [
                {
                    "name": "constant.numeric.shell",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        }
    }
}