<!-- 按钮组组件 - 用于显示多个操作按钮，支持居中排列和自动换行 -->
<template>
	<!-- 按钮组容器 -->
	<view class="button-group-container">
		<!-- 头部问候语区域 -->
		<view class="header">
			<text class="greeting"> 嗨！有什么我可以帮忙的吗？</text>
		</view>
		<button-wrapper button-align="left" :buttons="homeRecommendQuestions" @button-click="handleButtonClick" />

	</view>
</template>

<script lang="uts" setup>
	import { apiTenantConfig } from '@/servers/account'
	import { SUCCESS_CODE } from '@/constants/codes.constants';
	
	/**
	 * 定义组件向父组件发送的事件
	 */
	const emit = defineEmits<{
		buttonClick : [button: string] // 按钮点击事件，传递被点击的按钮信息
	}>()

	const homeRecommendQuestions = ref<string[]>([])// 首页推荐问题

	/**
	 * 处理按钮点击事件
	 * @param button 被点击的按钮文本
	 */
	const handleButtonClick = (button : string) => {
		// 向父组件发送按钮点击事件
		emit('buttonClick', button)
	}

		// 租户配置信息查询接口
	const fetchTenantConfig = async ()=>{
		const { code, data } = await apiTenantConfig()
		if (code === SUCCESS_CODE){
			homeRecommendQuestions.value = data?.homeRecommendQuestions?.slice(0,5) || []
		}
	}

	onLoad(()=>{
		fetchTenantConfig()
	})
</script>

